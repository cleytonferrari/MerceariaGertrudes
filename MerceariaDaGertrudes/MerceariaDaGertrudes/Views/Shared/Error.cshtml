@model System.Web.Mvc.HandleErrorInfo
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Error</title>
</head>
<body>
    <hgroup>
        <h1>Erro 500</h1>
        <h2>Ocorreu um erro enquanto processava sua requisição.</h2>
        <p>Action: @Html.DisplayFor(model=> model.ActionName)</p>
        <p>Controller: @Html.DisplayFor(model=> model.ControllerName)</p>
        <p>Erro: @Html.DisplayFor(model=> model.Exception.Message)</p>
    </hgroup>
</body>
</html>