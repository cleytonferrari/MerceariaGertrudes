@model IEnumerable<MerceariaDaGertrudes.Models.Usuario>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Criar Novo", "Cadastrar")
</p>
<table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Login)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Login)
        </td>
        <td>
            @Html.ActionLink("Editar", "Editar", new { id=item.UsuarioId }) |
            @Html.ActionLink("Detalhes", "Detalhes", new { id=item.UsuarioId }) |
            @Html.ActionLink("Excluir", "Excluir", new { id=item.UsuarioId })
        </td>
    </tr>
}

</table>
